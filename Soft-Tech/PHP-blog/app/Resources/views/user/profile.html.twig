                                {#<hr><a href='/{{user.fullName}}/edit/{{user.id}}' class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i> Edit Profile</a>#}
                                {#<a href='/{{user.fullName}}/changePassword/{{user.id}}' class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i> Change Password</a>#}
                            {#</div>#}
                            {#<!--<div class="col-md-12">-->#}
                            {#<!--</div>-->#}
                        {#</div>#}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
